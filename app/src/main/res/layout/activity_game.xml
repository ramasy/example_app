<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.asus.testapp.Controller.GameActivity">
    <TextView
        android:id="@+id/game_activity_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="center"
        android:text="Question?"/>
    <Button
        android:id="@+id/game_activity_reponse1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:text="Reponse 1"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:background="@android:color/white"
        />

    <Button
        android:id="@+id/game_activity_reponse2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Reponse 2"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:layout_weight="1"
        android:background="@android:color/white"
        />
    <Button
        android:id="@+id/game_activity_reponse3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:text="Reponse 3"
        android:textColor="@color/colorAccent"
        android:background="@android:color/white"
        />

    <Button
        android:id="@+id/game_activity_reponse4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:text="Reponse 4"
        android:textColor="@color/colorAccent" />


</LinearLayout>
